    <!-- Websites -->
    <div class="row">
      <h2 class="subtitle is-4 has-text-left has-text-weight-semibold pf-heading">Websites</h2>
      <span class="pf-images">
        <%= image_tag("web/ana-site.jpg") %>
        <%= image_tag("web/dclc-site.jpg") %>
        <%= image_tag("web/joana-site.jpg") %>
        <%= image_tag("web/kincaid-site.jpg") %>
      </span>
    </div>
