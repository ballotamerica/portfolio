<!-- Hero -->
<section class="section">
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
        <%= image_tag("logo_updated.png") %>
    </div>
  </nav>
</section>

<!-- Creative Portfolio -->
