    </div>

    <!-- Print and Direct Mail -->
    <div class="row">
      <h2 class="subtitle is-4 has-text-left has-text-weight-semibold pf-heading">Print & Direct Mail</h2>
      <span class="pf-images">
        <%= image_tag("printanddirectmail/print.png") %>
        <%= image_tag("printanddirectmail/dm.jpg") %>
      </span>
    </div>

    <!-- Infographics -->
    <div class="row">
      <h2 class="subtitle is-4 has-text-left has-text-weight-semibold pf-heading">Infographics</h2>
      <span class="pf-images">
        <%= image_tag("social/ig.jpg") %>
      </span>
    </div>

    <!-- Actblue Pages -->
    <div class="row">
      <h2 class="subtitle is-4 has-text-left has-text-weight-semibold pf-heading">Donation & ActBlue Pages</h2>
      <span class="pf-images">
        <%= image_tag("web/ab/ana-ab.png") %>
        <%= image_tag("web/ab/ed-ab.png") %>
