      <h2 class="subtitle is-4 has-text-left has-text-weight-semibold pf-heading">Literature & Palmcards</h2>
      <span class="pf-images">
        <%= image_tag("literature/palmcard-front.jpg") %>
        <%= image_tag("literature/palmcard-back.jpg") %>
